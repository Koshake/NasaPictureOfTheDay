<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@layout/main_fragment"
        motion:constraintSetStart="@layout/main_fragment_start"
        motion:duration="1000">

        <OnClick motion:targetId="@id/wiki_button" />
    </Transition>

    <Transition
        motion:constraintSetEnd="@layout/main_fragment_start"
        motion:constraintSetStart="@layout/main_fragment"
        motion:duration="1000">

        <OnClick motion:targetId="@id/input_layout" />

    </Transition>

    <Transition
        motion:constraintSetEnd="@layout/main_fragment_end"
        motion:constraintSetStart="@layout/main_fragment_start"
        motion:duration="1000">

        <OnClick motion:targetId="@id/image_view" />

    </Transition>

</MotionScene>
