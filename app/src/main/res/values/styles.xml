<resources>

    <style name="wiki_search_layout_style" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:hint">@string/search_wiki</item>
        <item name="counterEnabled">true</item>
        <item name="counterMaxLength">20</item>
        <item name="endIconCheckable">true</item>
        <item name="endIconDrawable">@drawable/ic_wikipedia</item>
        <item name="endIconMode">custom</item>
        <item name="helperText">@string/click_to_hide</item>
    </style>

    <style name="app_bar_style" parent="Widget.AppCompat.ActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="fabAlignmentMode">center</item>
        <item name="hideOnScroll">true</item>
        <item name="layout_scrollFlags">scroll|enterAlways</item>
        <item name="backgroundTint">?attr/appBarTint</item>
    </style>

    <style name="app_bar_style_main" parent="app_bar_style">
        <item name="navigationIcon">@drawable/ic_hamburger_menu_bottom_bar</item>
    </style>

    <style name="app_bar_style_earth" parent="app_bar_style">
        <item name="navigationIcon">@drawable/ic_arrow_white</item>
    </style>

    <style name="app_bar_style_fancy" parent="app_bar_style">
        <item name="backgroundTint">@color/color_light_purple</item>
    </style>

    <style name="app_bar_style_yellow" parent="app_bar_style">
        <item name="backgroundTint">@color/color_orange</item>
    </style>

    <style name="bottom_sheet_layout_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/color_milk_white</item>
        <item name="behavior_peekHeight">@dimen/peek_height</item>
        <item name="behavior_hideable">true</item>
    </style>

    <style name="bottom_sheet_line_style">
        <item name="android:layout_width">@dimen/bottom_sheet_line_width</item>
        <item name="android:layout_height">@dimen/bottom_sheet_line_height</item>
        <item name="android:layout_marginTop">@dimen/bottom_sheet_line_margin_top</item>
        <item name="android:background">@color/bottomSheetBackground</item>
    </style>

    <style name="bottom_sheet_header_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/bottom_sheet_line_margin_top</item>
        <item name="android:paddingStart">@dimen/bottom_sheet_line_padding</item>
        <item name="android:paddingEnd">@dimen/bottom_sheet_line_padding</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:visibility">gone</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="bottom_sheet_info_style" parent="bottom_sheet_header_style">
        <item name="android:layout_marginStart">@dimen/bottom_sheet_line_margin_start</item>
        <item name="android:visibility">visible</item>
    </style>

    <style name="bottom_sheet_description_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/bottom_sheet_line_margin_top</item>
        <item name="android:paddingStart">@dimen/description_padding</item>
        <item name="android:paddingEnd">@dimen/description_padding</item>
        <item name="android:visibility">gone</item>
        <item name="android:textColor">@color/color_dark_gray</item>
    </style>

    <style name="screens_nav_view_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:layout_marginStart">@dimen/screens_nav_margin</item>
        <item name="android:layout_marginTop">@dimen/screens_nav_margin</item>
        <item name="android:layout_marginEnd">@dimen/screens_nav_margin</item>
    </style>

    <style name="SettingsStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/color_milk_white</item>
    </style>

    <style name="ToolbarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="navigationIcon">@drawable/ic_baseline_arrow_back_24</item>
    </style>

    <style name="IndicatorStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_constraintHorizontal_chainStyle">packed</item>
        <item name="android:layout_marginStart">@dimen/indicator_margin</item>
        <item name="android:layout_marginLeft">@dimen/indicator_margin</item>
        <item name="android:layout_marginEnd">@dimen/indicator_margin</item>
        <item name="android:layout_marginRight">@dimen/indicator_margin</item>
        <item name="android:layout_marginBottom">@dimen/indicator_margin_bottom</item>
    </style>

    <style name="WikiButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/wiki_button_margin_end</item>
        <item name="android:layout_marginBottom">@dimen/wiki_button_margin_botton</item>
    </style>

    <style name="EarthTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/text_margin</item>
    </style>

</resources>