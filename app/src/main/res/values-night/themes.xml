<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_dark_green</item>
        <item name="colorPrimaryDark">@color/color_green</item>
        <item name="colorAccent">@color/color_green</item>
        <item name="android:textColorPrimary">@color/color_dark_gray</item>
        <item name="android:textColorSecondary">@color/color_dark_gray</item>
        <item name="appBarTint">@color/color_green</item>
        <item name="indicator_active_color">@color/color_indigo</item>
        <item name="indicator_passive_color">@color/color_light_blue</item>
        <item name="earth_card_background">@android:color/black</item>
        <item name="note_selected_background">@color/color_light_gray</item>
        <item name="shapeAppearanceSmallComponent">@style/AppShapeAppearance.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/AppShapeAppearance.MediumComponent</item>
    </style>

    <style name="AppTheme.AppThemeYellow">
        <item name="colorSurface">@color/color_yellow</item>
        <item name="appBarTint">@color/color_lime</item>
    </style>
    <style name="AppTheme.AppThemeBlue">
        <item name="android:colorBackground">@color/color_dark_blue</item>
        <item name="colorSurface">@color/color_light_blue</item>
        <item name="appBarTint">@color/color_light_blue</item>
    </style>
    <style name="AppThemeFancy" parent="AppTheme.AppThemeBlue">
        <item name="android:colorBackground">@color/color_dark_purple</item>
        <item name="colorPrimary">@color/color_fucsia</item>
        <item name="colorPrimaryDark">@color/color_purple</item>
        <item name="colorSecondary">@color/color_pig</item>
        <item name="colorAccent">@color/color_dark_purple</item>
        <item name="appBarTint">@color/color_light_purple</item>
        <item name="shapeAppearanceSmallComponent">@style/AppShapeAppearance.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/AppShapeAppearance.MediumComponent</item>
    </style>
    <style name="AppShapeAppearance.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">2dp</item>
    </style>

    <style name="AppShapeAppearance.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">2dp</item>
    </style>
    <style name="MyTextAppearanceMedium" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/abril_fatface</item>
    </style>
    <style name="MyTextAppearanceSmall" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/donegal_one</item>
    </style>
</resources>